import java.util.*;
public class Hello {

    public static void main(String[] args) {
		//Your Code Here
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		int arr[]=new int[n];
		int f=0;
		for(int i=0;i<arr.length;i++){
		    arr[i]=sc.nextInt();
		}
		for(int i=0;i<n-1;i+=2){
		    if(arr[i]==arr[i+1]){
		        f=1;
		        break;
		    }
		}
		if(f==1){
		    System.out.print("no");
		}else{
		    System.out.print("yes");
		}
	}
}
